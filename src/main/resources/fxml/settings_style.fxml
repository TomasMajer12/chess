<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="650" minWidth="700"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.cvut.fel.pjv.gui.GuiController">

    <center>
        <VBox alignment="CENTER"  BorderPane.alignment="CENTER" styleClass="buttonPanel" stylesheets="@../css/style.css">
            <children >
                <Label  text="TIMER"><font><Font size="50.0" /></font></Label>
                <Button mnemonicParsing="false" text="+" BorderPane.alignment="CENTER" onAction="#add_to_timer"/>
                <Label fx:id="TimerLabel" text="60">
                    <font>
                        <Font size="20.0" />
                    </font></Label>
                <Button  mnemonicParsing="false" text="-" BorderPane.alignment="CENTER" onAction="#remove_from_timer"/>
                <Button fx:id="back" mnemonicParsing="false"  text="BACK" onAction="#change_to_main_menu" BorderPane.alignment="CENTER"/>
            </children>
        </VBox>
    </center>
</BorderPane>